{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "baseUrl": "./",  // <-- Add this line
    "paths": {
      "*": ["node_modules/*"],
      "types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
